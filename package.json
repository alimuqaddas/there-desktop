{
  "name": "there-desktop",
  "productName": "There",
  "description": "Desktop client for There PM",
  "version": "1.2.3",
  "main": "main/index.js",
  "license": "MIT",
  "author": {
    "name": "There PM",
    "email": "support@there.pm"
  },
  "contributors": [
    "Mohammad Rajabifard <mo@there.pm>"
  ],
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "babel-plugin-polished": "1.1.0",
    "babel-plugin-styled-components": "1.4.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "concurrently": "^3.5.1",
    "cross-env": "5.1.3",
    "electron": "1.7.11",
    "electron-builder": "20.5.1",
    "eslint": "4.16.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.5.0",
    "eslint-plugin-react": "7.5.1",
    "husky": "0.14.3",
    "lint-staged": "7.0.0",
    "next": "5.0.0",
    "nodemon": "1.14.11",
    "react": "16.2.0",
    "react-dom": "16.2.0"
  },
  "dependencies": {
    "@zeit/next-css": "0.1.4",
    "app-root-path": "2.0.1",
    "bufferutil": "3.0.3",
    "create-react-context": "0.1.6",
    "dotenv": "4.0.0",
    "downshift": "1.28.5",
    "electron-debug": "1.5.0",
    "electron-devtools-installer": "2.2.3",
    "electron-is-dev": "0.3.0",
    "electron-log": "2.2.14",
    "electron-next": "3.1.4",
    "electron-react-devtools": "0.5.3",
    "electron-store": "1.3.0",
    "electron-unhandled": "1.0.0",
    "electron-updater": "2.21.0",
    "electron-util": "0.6.0",
    "first-run": "1.2.0",
    "fix-path": "2.1.0",
    "jstz": "2.0.0",
    "just-compare": "1.2.1",
    "just-compose": "1.0.6",
    "just-debounce-it": "1.0.1",
    "lodash-es": "4.17.5",
    "menubar": "5.2.3",
    "moment-timezone": "0.5.14",
    "ms": "2.1.1",
    "polished": "1.9.0",
    "prettier": "1.11.1",
    "prop-types": "15.6.0",
    "raven": "2.4.1",
    "raven-js": "3.22.3",
    "react-onclickoutside": "6.7.1",
    "socket.io-client": "2.0.4",
    "styled-components": "3.1.2",
    "unsplash-js": "4.8.0",
    "urql": "0.2.0",
    "utf-8-validate": "4.0.0",
    "wenk": "1.0.7"
  },
  "lint-staged": {
    "*.js": [
      "yarn test-lint",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "build": {
    "appId": "pm.there.desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "main/static/icons/mac.icns",
      "target": [
        "zip"
      ],
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "main/static/icons/windows.ico"
    },
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "scripts": {
    "dev": "electron main",
    "start": "cross-env ONLINE_API=1 electron main",
    "build": "yarn build-renderer && yarn build-app",
    "build-app": "build",
    "build-renderer": "next build renderer && next export renderer",
    "format": "prettier --write '{renderer,main}/**/*.{js,json}'",
    "test": "yarn test-lint",
    "test-lint": "eslint . --fix",
    "precommit": "lint-staged"
  }
}
