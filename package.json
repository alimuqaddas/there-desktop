{
  "productName": "Now",
  "name": "there-desktop",
  "version": "1.0.0",
  "main": "main/index.js",
  "license": "MIT",
  "author": {
    "name": "There PM",
    "email": "support@there.pm"
  },
  "contributors": [
    "Mohammad Rajabifard <mo@there.pm>"
  ],
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "babel-plugin-polished": "1.1.0",
    "babel-plugin-styled-components": "1.4.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-destructuring": "6.23.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-regenerator": "6.26.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "concurrently": "^3.5.1",
    "cross-env": "5.1.3",
    "electron": "1.7.11",
    "electron-builder": "19.54.0",
    "electron-debug": "1.5.0",
    "electron-next": "3.1.3",
    "electron-react-devtools": "0.5.3",
    "eslint": "4.16.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.5.0",
    "eslint-plugin-react": "7.5.1",
    "next": "4.2.3",
    "nodemon": "1.14.11",
    "parcel-bundler": "1.4.1"
  },
  "dependencies": {
    "app-root-path": "2.0.1",
    "dotenv": "4.0.0",
    "downshift": "1.27.0",
    "electron-is-dev": "0.3.0",
    "electron-store": "1.3.0",
    "electron-unhandled": "1.0.0",
    "firebase": "4.9.0",
    "jstz": "2.0.0",
    "menubar": "5.2.3",
    "moment-timezone": "0.5.14",
    "polished": "1.9.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "styled-components": "3.1.2",
    "timezones.json": "1.3.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "build": {
    "appId": "pm.there.desktop",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "scripts": {
    "start": "electron main",
    "start:watch": "nodemon --exec \"npm run start\" --watch ./main",
    "build": "next build renderer && next export renderer",
    "pack": "npm run build && electron-builder --dir  -p",
    "dist": "npm run build && electron-builder  -p",
    "format": "prettier --write '{renderer,main}/**/*.{js,json}'"
  }
}
